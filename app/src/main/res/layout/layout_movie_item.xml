<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frl_movie"
    android:layout_width="200dp"
    android:layout_height="270dp"
    android:gravity="center"
    android:orientation="vertical">

    <com.scott.vp.weigit.FocusFrameLayout
        android:id="@+id/ffl_movie"
        android:layout_width="180dp"
        android:layout_height="226dp"
        android:focusable="true">


        <ImageView
            android:id="@+id/riv_thumb"
            android:layout_width="180dp"
            android:layout_height="226dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_loading_default_450_604" />

        <TextView
            android:id="@+id/tv_moviename"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="bottom"
            android:background="#99000000"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="测试电影"
            android:textColor="@color/color_white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_newtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_new_movie"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_selected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/icon_thumb_bg_press"
            android:visibility="gone" />


    </com.scott.vp.weigit.FocusFrameLayout>

</LinearLayout>